<!-- Catalog Section -->
<div class="mb-12">
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-2xl font-bold">
      Portofolio proyek<br />kami tahun 2024
    </h2>

    <div class="text-sm text-right">
      <p class="font-bold">
        Solusi desain rumah<br />untuk kebutuhan modern
      </p>
      <p class="text-gray-500">dengan berbagai keunggulan</p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="relative rounded-xl overflow-hidden h-64 bg-gray-300">
      <!-- Image placeholder -->
      <img
        src="img/project1.jpg"
        class="w-full h-full object-cover rounded-xl"
        alt=""
      />
      <div
        class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent text-white"
      >
        <p class="font-bold">Rumah Minimalis, 300m²</p>
        <p class="text-sm">harga dari Rp 60.000.000</p>
      </div>
    </div>

    <div class="relative rounded-xl overflow-hidden h-64 bg-gray-300">
      <!-- Image placeholder -->
      <img
        src="img/project2.jpg"
        class="w-full h-full object-cover rounded-xl"
        alt=""
      />
      <div
        class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent text-white"
      >
        <p class="font-bold">Rumah Modern, 400m²</p>
        <p class="text-sm">harga dari Rp 80.000.000</p>
      </div>
    </div>

    <div class="relative rounded-xl overflow-hidden h-64 bg-gray-300">
      <!-- Image placeholder -->
